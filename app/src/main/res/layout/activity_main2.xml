<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:theme="@style/MyTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="144dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="0"
                android:textSize="50sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/num7"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/num8"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/num9"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/add"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="40sp"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/num4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/num5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/num6"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/sub"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="40sp"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/num1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/num2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/num3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/mul"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="40sp"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/num0"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/AC"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="AC"
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/equal"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="40sp"></Button>

            <Button
                android:id="@+id/div"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="40sp"></Button>
        </LinearLayout>






    </LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>